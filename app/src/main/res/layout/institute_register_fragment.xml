<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/bg"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montaga"
        android:padding="15dp"
        android:text="Register Institute"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_Primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_register_institute_code"
                android:padding="7dp"
                android:hint="Enter Institute Code"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:id="@+id/et_register_institute_name"
                android:hint="Enter Institute Name"
                android:fontFamily="@font/montaga"
                android:background="@drawable/outline_rec"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:id="@+id/et_register_institute_email"
                android:hint="Enter  Institute Email"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:inputType="textEmailAddress"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:hint="Enter  Institute Address"
                android:id="@+id/et_register_institute_address"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:hint="Enter Principal's Name"
                android:id="@+id/et_register_institute_pName"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:hint="Enter Principal's Contact"
                android:id="@+id/et_register_institute_pContact"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:hint="Enter Principal's Email"
                android:id="@+id/et_register_institute_pEmail"
                android:inputType="textEmailAddress"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:id="@+id/et_register_institute_city"
                android:hint="Enter  Institute City"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:hint="Enter  Institute State"
                android:id="@+id/et_register_institute_state"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:id="@+id/et_register_institute_pass"
                android:hint="Create Password"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:inputType="textPassword"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:hint="Rewrite Password"
                android:id="@+id/et_register_institute_re_pass"
                android:background="@drawable/outline_rec"
                android:fontFamily="@font/montaga"
                android:inputType="textPassword"
                android:minLines="1"
                android:maxLines="1"
                android:ems="10"
                android:layout_marginBottom="10dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_register_institute"
                android:fontFamily="@font/montaga"
                android:textStyle="bold"
                android:text="Register"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="10dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>